#include <iostream>
using namespace std;

int main()
{
	const int N = 10;
	int a[N] = { 12, 5, 3, 2, 45, 96, 6, 8, 11, 24 };

	int buff = 0;	// для зберігання зміщеного значення
	int i, j;		// для циклів		

	/************* Початок сортування *******************/
	for (i = 1; i < N; i++)
	{
		buff = a[i]; // запам'ятаємо оброблюваний елемент
		// і починаю зміщення елементів зліва від нього
		// поки запам'ятований не буде менше ніж переміщуваний
		for (j = i - 1; j >= 0 && a[j] > buff; j--)
					a[j + 1] = a[j];	

		a[j + 1] = buff; // ставимо запам'ятований на його нове місце	
	}
	/************* Кінець сортування *******************/

	for (int i = 0; i < N; i++) // висновок відсортованого масива
		cout << a[i] << '\t';
	cout << endl;
}
